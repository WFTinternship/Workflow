    <servlet>
        <servlet-name>HomePosts</servlet-name>
        <servlet-class>com.workfront.internship.workflow.api.HomeController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>HomePosts</servlet-name>
        <url-pattern></url-pattern>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Post</servlet-name>
        <servlet-class>com.workfront.internship.workflow.api.PostController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Post</servlet-name>
        <url-pattern>/post/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NewPost</servlet-name>
        <servlet-class>com.workfront.internship.workflow.api.NewPostPageController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewPost</servlet-name>
        <url-pattern>/new-post</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.workfront.internship.workflow.api.LoginController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignUp</servlet-name>
        <servlet-class>com.workfront.internship.workflow.api.SignUpController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SignUp</servlet-name>
        <url-pattern>/signup/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NewAnswer</servlet-name>
        <servlet-class>com.workfront.internship.workflow.api.NewAnswerController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>NewAnswer</servlet-name>
        <url-pattern>/new-answer/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Upload</servlet-name>
        <servlet-class>com.workfront.internship.workflow.api.FileUploadHandler</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Upload</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Comment</servlet-name>
        <servlet-class>com.workfront.internship.workflow.api.CommentController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Comment</servlet-name>
        <url-pattern>/comment</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AppAreaPosts</servlet-name>
        <servlet-class>com.workfront.internship.workflow.api.AppAreaPostsController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AppAreaPosts</servlet-name>
        <url-pattern>/appArea/*</url-pattern>
    </servlet-mapping>


</web-app>