<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <listener>
        <listener-class>
            com.workfront.internship.workflow.api.ContextListener
        </listener-class>
    </listener>

    <!--<welcome-file-list>-->
        <!--<welcome-file>home.jsp</welcome-file>-->
    <!--</welcome-file-list>-->

    <servlet>
        <servlet-name>HomePosts</servlet-name>
        <servlet-class>com.workfront.internship.workflow.api.HomePageController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>HomePosts</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Post</servlet-name>
        <servlet-class>com.workfront.internship.workflow.api.PostPageController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Post</servlet-name>
        <url-pattern>/post</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddPost</servlet-name>
        <servlet-class>com.workfront.internship.workflow.api.AddPost</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddPost</servlet-name>
        <url-pattern>/addPost</url-pattern>
    </servlet-mapping>


</web-app>